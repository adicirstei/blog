extends layout

block content
  include blogpost
  #newcomment
    form(method='POST')
      input(type='text', name='comment[email]')
      br
      textarea(name='comment[comment]', rows='6', cols='30')
      br
      input(type='submit', value='save')
  #comments
    - each c in post.comments
      .comment = c.comment
        
    
    