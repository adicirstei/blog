.blogpost
  .title
    a(href='/post/#{post._id}')
      h2.ptitle
        != post.title
  - if (user)
    .pcontrols
      a(href='/edit/#{post._id}') edit
      a(href='/del/#{post._id}') delete
  - if (post.tags.length && post.tags.length > 0)
    .ac-group
      span.ui-icon.ui-icon-tag(title='tags')
      - each t in post.tags
        span.tag
          a(href='/tag/#{t}')!= t
  .cwrapper.ac-group
    span.ui-icon.ui-icon-comment(title='comments')
    != post.comments.length
  - if(post.published)
    .ac-body
      != post.body
  - else
    .ac-body.ac-unpublished 
      != post.body
    